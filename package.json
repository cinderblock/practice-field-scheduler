{
	"name": "field-scheduler",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"test": "npm run test:unit && npm run test:e2e",
		"test:unit": "cross-env DATA_DIR=.tmp/unit-data TEST_AUTH_BYPASS=1 vitest run --coverage",
		"test:e2e": "cross-env DATA_DIR=.tmp/e2e-data TEST_AUTH_BYPASS=1 playwright test",
		"build": "next build",
		"check": "biome check .",
		"check:unsafe": "biome check --write --unsafe .",
		"check:write": "biome check --write .",
		"dev": "next dev --turbo",
		"preview": "next build && next start",
		"start": "next start",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@date-fns/tz": "^1.2.0",
		"@t3-oss/env-nextjs": "^0.13.8",
		"@tanstack/react-query": "^5.80.7",
		"@trpc/client": "^11.4.1",
		"@trpc/react-query": "^11.4.1",
		"@trpc/server": "^11.4.1",
		"first-events-api": "^1.0.5",
		"next": "^15.3.3",
		"next-auth": "5.0.0-beta.25",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"server-only": "^0.0.1",
		"superjson": "^2.2.2",
		"zod": "^3.25.64"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@playwright/test": "^1.53.0",
		"@testing-library/react": "^16.3.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^24.0.1",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitest/coverage-v8": "^3.2.3",
		"@vitest/runner": "^3.2.3",
		"allure-playwright": "^3.2.2",
		"allure-vitest": "^3.2.2",
		"cross-env": "^7.0.3",
		"node-mocks-http": "^1.17.2",
		"supertest": "^7.1.1",
		"typescript": "^5.8.3",
		"vitest": "^3.2.3"
	},
	"ct3aMetadata": {
		"initVersion": "7.39.3"
	},
	"packageManager": "npm@11.4.2"
}
